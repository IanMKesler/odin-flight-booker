<%= form_with(scope: :flight, method: :get, local: true) do |f| %>
    <%= f.label :from %>
    <%# byebug %>
    <%= f.select :from_airport_id, options_for_select(@airport_options), include_blank: true %>

    <%= f.label :to %>
    <%= f.select :to_airport_id, options_for_select(@airport_options), include_blank: true %></br>

    <% f.label :passengers, "Number of passengers" %>
    <%= f.select :passengers, options_for_select(@passenger_options), include_blank: true %></br>

    <% f.label :start, "Flight date" %>
    <%= f.select :start, options_for_select(@datetime_options), include_blank: true %></br>

    <%= f.submit "Search" %>
<% end %>